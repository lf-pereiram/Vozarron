<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto" >


    <ImageView
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Participantes"
        android:id="@+id/btnCompetidores"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/btnEntrenadores"
        android:layout_alignEnd="@+id/imagen"
        android:layout_marginEnd="22dp"
        android:textSize="20dp"
        android:onClick="verParticipantes"
        android:layout_alignTop="@+id/btnEntrenadores" />

    <ImageView
        android:id="@+id/imagen"
        android:src="@drawable/collage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_votar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_translate_white_24dp"
        app:fabSize="normal"
        app:backgroundTint="?android:attr/colorForeground"
        android:layout_marginBottom="109dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Entrenadores"
        android:id="@+id/btnEntrenadores"
        android:background="#000000"
        android:textColor="#ffffff"

        android:onClick="verEntrenadores"
        android:textSize="20dp"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/btn_votar"
        android:layout_alignStart="@+id/imagen"
        android:layout_marginStart="28dp" />

</RelativeLayout>